generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullname  String
  username  String   @unique
  password  String
  role      String
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Order     Order[]
}

model Branch {
  id        String    @id @default(uuid())
  name      String
  location  String
  users     User[]
  sales     Sale[]
  expenses  Expense[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Order     Order[]
}

model Sale {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Float
  date        DateTime @default(now())
  branchId    String
  branch      Branch   @relation(fields: [branchId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id                  String   @id @default(uuid())
  tableNumber         Int
  customerName        String
  waiterId            String
  waiter              User     @relation(fields: [waiterId], references: [id])
  branchId            String
  branch              Branch   @relation(fields: [branchId], references: [id])
  status              String
  placedAt            DateTime
  specialInstructions String?
  items               Json

  @@map("orders")
}
